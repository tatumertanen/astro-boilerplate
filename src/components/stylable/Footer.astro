---
import { Icon } from "astro-icon/components";
import LanguagePicker from "@/components/core/LanguagePicker.astro";
import { site } from "@/config";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@/i18n/utils";
import Container from "../core/Container.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<footer class="bg-black/50">
  <Container>
    <div class="py-8 md:py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="space-y-4">
          <h3 class="text-lg font-semibold">{t("footer.title.about")}</h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t("footer.about")}
          </p>
        </div>
        <div class="space-y-4">
          <h3 class="text-lg font-semibold">{t("footer.title.links")}</h3>
          <ul class="space-y-2">
            <li>
              <a
                href={translatePath("/")}
                class="hover:text-blue-600 dark:hover:text-blue-400"
              >
                {t("nav.home")}
              </a>
            </li>
            <li>
              <a
                href={translatePath("/services")}
                class="hover:text-blue-600 dark:hover:text-blue-400"
              >
                {t("nav.services")}
              </a>
            </li>
            <li>
              <a
                href={translatePath("/about")}
                class="hover:text-blue-600 dark:hover:text-blue-400"
              >
                {t("nav.about")}
              </a>
            </li>
            <li>
              <a
                href={translatePath("/contact")}
                class="hover:text-blue-600 dark:hover:text-blue-400"
              >
                {t("nav.contact")}
              </a>
            </li>
          </ul>
        </div>
        <div class="space-y-4">
          <h3 class="text-lg font-semibold">{t("footer.title.contact")}</h3>
          <ul class="space-y-2 text-gray-600 dark:text-gray-400">
            <li class="flex items-center gap-2">
              <Icon name="mdi:location" class="w-5 h-5" />
              {site.businessInfo?.address}
            </li>
            <li class="flex items-center gap-2">
              <Icon name="mdi:phone" class="w-5 h-5" />
              {site.businessInfo?.phone}
            </li>
            <li class="flex items-center gap-2">
              <Icon name="mdi:email" class="w-5 h-5" />
              {site.contactEmail}
            </li>
          </ul>
        </div>
        <div class="space-y-4">
          <h3 class="text-lg font-semibold">{t("footer.title.social")}</h3>
          <div class="flex space-x-4">
            <a
              href={site.socialLinks?.facebook}
              class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
            >
              <Icon name="mdi:facebook" class="w-6 h-6" />
            </a>
            <a
              href={site.socialLinks?.twitter}
              class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
            >
              <Icon name="mdi:twitter" class="w-6 h-6" />
            </a>
            <a
              href={site.socialLinks?.linkedin}
              class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
            >
              <Icon name="mdi:linkedin" class="w-6 h-6" />
            </a>
            <a
              href={site.socialLinks?.instagram}
              class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
            >
              <Icon name="mdi:instagram" class="w-6 h-6" />
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200 dark:border-gray-800 py-6">
      <div class="flex flex-col items-center gap-4">
        <p class="text-center text-gray-600 dark:text-gray-400">
          Â© {new Date().getFullYear()}
          {site.name}. All rights reserved.
        </p>
      </div>
    </div>
  </Container>
</footer>
