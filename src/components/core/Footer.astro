---
import { Icon } from "astro-icon/components";
---

<footer class="border-t border-gray-200 dark:border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-8 md:py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="space-y-4">
          <h3 class="text-lg font-semibold">About Us</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Your trusted partner in delivering exceptional solutions and
            services.
          </p>
        </div>
        <div class="space-y-4">
          <h3 class="text-lg font-semibold">Quick Links</h3>
          <ul class="space-y-2">
            <li>
              <a href="/" class="hover:text-blue-600 dark:hover:text-blue-400"
                >Home</a>
            </li>
            <li>
              <a
                href="/services"
                class="hover:text-blue-600 dark:hover:text-blue-400"
                >Services</a>
            </li>
            <li>
              <a
                href="/about"
                class="hover:text-blue-600 dark:hover:text-blue-400">About</a>
            </li>
            <li>
              <a
                href="/contact"
                class="hover:text-blue-600 dark:hover:text-blue-400">Contact</a>
            </li>
          </ul>
        </div>
        <div class="space-y-4">
          <h3 class="text-lg font-semibold">Contact Info</h3>
          <ul class="space-y-2 text-gray-600 dark:text-gray-400">
            <li class="flex items-center gap-2">
              <Icon name="mdi:location" class="w-5 h-5" />
              123 Business Street, Suite 100
            </li>
            <li class="flex items-center gap-2">
              <Icon name="mdi:phone" class="w-5 h-5" />
              (555) 123-4567
            </li>
            <li class="flex items-center gap-2">
              <Icon name="mdi:email" class="w-5 h-5" />
              info@example.com
            </li>
          </ul>
        </div>
        <div class="space-y-4">
          <h3 class="text-lg font-semibold">Follow Us</h3>
          <div class="flex space-x-4">
            <a
              href="#"
              class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
            >
              <Icon name="mdi:facebook" class="w-6 h-6" />
            </a>
            <a
              href="#"
              class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
            >
              <Icon name="mdi:twitter" class="w-6 h-6" />
            </a>
            <a
              href="#"
              class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
            >
              <Icon name="mdi:linkedin" class="w-6 h-6" />
            </a>
            <a
              href="#"
              class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
            >
              <Icon name="mdi:instagram" class="w-6 h-6" />
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200 dark:border-gray-800 py-6">
      <p class="text-center text-gray-600 dark:text-gray-400">
        Â© {new Date().getFullYear()} Your Company Name. All rights reserved.
      </p>
    </div>
  </div>
</footer>
