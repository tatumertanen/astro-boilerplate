---
import { site } from "@/config";
import Container from "@/components/core/Container.astro";
import Layout from "@/layouts/Layout.astro";
import type { Metadata } from "@/types";

const meta: Metadata = {
  title: "Welcome to Our Website",
  description: "Your trusted partner for innovative solutions",
  author: "Company Name",
  keywords: ["business", "services", "solutions", "professional"],
  twitter: {
    card: "summary_large_image",
    site: site.url,
    creator: "@companyname",
    image: "/images/social-share.jpg",
    title: "Welcome to Our Website",
    description: "Your trusted partner for innovative solutions",
  },
  og: {
    title: "Welcome to Our Website",
    description: "Your trusted partner for innovative solutions",
    image: "/images/social-share.jpg",
    url: site.url,
    type: "website",
  },
};
---

<Layout meta={meta}>
  <Container>
    <div class="py-20 space-y-16">
      <section class="text-center space-y-6">
        <h1 class="text-5xl font-bold text-foreground">
          Welcome to Company Name
        </h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          We specialize in delivering exceptional solutions for your business
          needs. Discover how we can help you achieve your goals.
        </p>
        <div class="flex gap-4 justify-center">
          <a
            href="/services"
            class="px-6 py-3 bg-primary text-primary-foreground rounded-lg hover:opacity-90"
            >Our Services</a
          >
          <a
            href="/contact"
            class="px-6 py-3 border border-input rounded-lg hover:bg-accent"
            >Contact Us</a
          >
        </div>
      </section>

      <section class="grid md:grid-cols-3 gap-8">
        <div class="p-6 border border-input rounded-lg text-center">
          <h2 class="text-xl font-semibold mb-4">Quality Service</h2>
          <p class="text-muted-foreground">
            Delivering excellence in everything we do
          </p>
        </div>
        <div class="p-6 border border-input rounded-lg text-center">
          <h2 class="text-xl font-semibold mb-4">Expert Team</h2>
          <p class="text-muted-foreground">
            Professional staff ready to assist you
          </p>
        </div>
        <div class="p-6 border border-input rounded-lg text-center">
          <h2 class="text-xl font-semibold mb-4">Innovation</h2>
          <p class="text-muted-foreground">
            Staying ahead with modern solutions
          </p>
        </div>
      </section>
    </div>
  </Container>
</Layout>
