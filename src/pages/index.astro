---
import { site } from "@/config";
import Container from "@/components/core/Container.astro";
import Layout from "@/layouts/Layout.astro";
import type { Metadata } from "@/types";

const meta: Metadata = {
  title: "",
  description: "",
  author: "",
  keywords: [],
  twitter: {
    card: "summary_large_image",
    site: site.url,
    creator: "",
    image: "",
    title: "",
    description: "",
  },
  og: {
    title: "",
    description: "",
    image: "",
    url: site.url,
    type: "website",
  },
};
---

<Layout meta={meta}>
  <Container>
    <!-- YOU CAN REMOVE THIS -->
    <h1
      class="text-4xl font-bold text-center text-gray-800 dark:text-gray-100 mt-12 mb-4"
    >
      Astro Boilerplate
    </h1>
    <p class="text-lg text-center text-gray-600 dark:text-gray-400">
      This is a boilerplate template for <a
        href="https://astro.build"
        class="text-blue-500 hover:underline">Astro</a
      >.
    </p>
    <!-- YOU CAN REMOVE THIS -->
  </Container>
</Layout>
